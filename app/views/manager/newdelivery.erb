<p class="zagatpage">Новая поставка</p>


  <% unless flash[:notice].blank? %>
<div><%= flash[:notice] %></div>
<% end %>

<%form_for [@PartsProvider], :url => { :actions => "newdelivery"} do |f| %>
	<p class="zagmin">Артикул комплектующего:<br/>
          <%= f.text_field :art %>
        </p>

        <p class="zagmin">id комплектующего:<br/>
          <%= f.text_field :part_id %>
        </p>

	<p class="zagmin">Цена, руб:<br/>
          <%=f.text_field  :cost%>
          <%=  error_message_on 'PartsProvider', 'cost'%>
        </p>

        <p class="zagmin">id Поставщика:<br/>
          <%=f.text_field :provider_id%>
        </p>

		<%= submit_tag "OK" %>
<%end%>